	  <script type="text/javascript">
        function startLogin() {
            var loading = layer.load(0);
            var user = {};
            var loginResult = "";
            user.userNameOrEmail = document.getElementById("inputEmail").value;
            user.password = document.getElementById("inputPassword").value;
            $.ajax({
                async : false,
                type : 'POST',
                url : '${cp}/doLogin',
                data : user,
                dataType : 'json',
                success : function(result) {
                    loginResult = result.result;
                    layer.close(loading);
                },
                error : function(result) {
                    layer.alert('Truy vấn người dùng lỗi');
                }
            });

            if(loginResult == 'success'){
                layer.msg('Đăng nhập thành công',{icon:1});
                window.location.href = "${cp}/main";
            }
            else if(loginResult == 'unexist'){
                layer.msg('Tên người dùng bạn nhập sai?',{icon:2});
            }
            else if(loginResult == 'wrong'){
                layer.msg('Mật khẩu sai, hãy thử lại',{icon:2});
            }
            else if(loginResult == 'fail'){
                layer.msg('Máy chủ ngoại lệ',{icon:2});
            }

        }
    </script>
	
